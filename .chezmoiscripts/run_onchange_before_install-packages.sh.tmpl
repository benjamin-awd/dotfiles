{{ $taps := list
    "homebrew/cask"
    "homebrew/cask-fonts"
-}}

{{ $brews := list
    "awscli"
    "bat"
    "exa"
    "fzf"
    "gcc"
    "git"
    "jupyterlab"
    "poetry"
    "postgresql"
    "pyenv"
    "python@3.8"
    "terraform"
    "tree"
-}}

{{ $casks := list
    "bitwarden"
    "font-caskaydia-cove-nerd-font"
    "font-fira-code"
    "google-chrome"
    "rectangle"
    "scroll-reverser"
    "slack"
    "spotify"
    "telegram"
    "visual-studio-code"
-}}

{{ if (eq .chezmoi.os "darwin") -}}
{{ $brews = concat $brews (list
    "dockutil") -}}
{{ end -}}

#!/bin/bash
set -eufo pipefail

{{ range $taps }}
brew tap {{ . }}
{{ end  }}

brew install {{ $brews | join " " }}

{{ if (eq .chezmoi.os "darwin") -}}
brew install --cask {{ $casks | join " " }}
{{ end -}}
